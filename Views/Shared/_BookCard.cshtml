@model Book;

<div class="col">
    <div class="card pie-card">
        <img src="@Model.CoverURL" class="card-img-top" alt="@Model.Title">
        <div class="card-body pie-button">
            <h4 class="d-grid">
            </h4>

            <div class="d-flex justify-content-between mt-2">
                <h2 class="text-start">
                    <a asp-controller="Book"
                       asp-action="Details"
                       asp-route-id="@Model.Id"
                       class="pie-link">@Model.Title</a>
                </h2>
                <h5 class="text-nowrap">
                    @Model.Price.ToString("c").Replace("zł", "$")
                </h5>
            </div>
        </div>
    </div>
</div>