@model Book

<h3 class= "my-5">
    @Model.Title 
</h3>

<div class = "row gx-5">
    <img alt="@Model.Title" src="@Model.CoverURL" class="img-fluid col-5" />
    <div class="col-7">
        <h4>@Model.Description</h4>
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <div class="addToCart">
            <p class="button">

            </p>
        </div>
    </div>
</div>